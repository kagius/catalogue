block breadcrumbs

block title
	if data.meta.title
		h1
			a(href="/" + data.url)= data.meta.title
			
if data.content
	div!= data.content

if data.children.length > 0
	block subtitle
	
	div.list-group
		for child in data.children
			a.list-group-item(href="/" + child.url)= child.meta.title

unless data.children.length > 0
	div.alert.alert-warning
		| Sorry, there is currently no further information about this!